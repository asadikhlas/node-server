	<div class="container mt-5">		
		<div class="row">
			<div class="divStyling" style="width: 40%;">
				<div class=" col">
					<h2 class="mb-5 text-center">Update</h2>
					<form method="POST" action="http://localhost:3000/blog/editForm/">
						<% for(var i=0; i < result.length; i++) { %>
						<input type="hidden" name="id" value="<%= result[i].id %>">
						<div class="modal-content">
							<div class="modal-header text-center">
								<h4 class="modal-title w-100 font-weight-bold">Edit Post</h4>
								<button type="button" class="close" data-dismiss="modal" aria-label="close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body mx-3">
								<div class="md-form mb-3">
									<i class="fa fa-user prefix grey-text"></i>
									<input type="text" id="name" name="name" class="form-control validate" value="<%= result[i].name %>">
									<label data-error="wrong" data-success="right" for="email" >Name</label>
								</div>
								<div class="md-form mb-3">
									<i class="fa fa-comment-o prefix grey-text"></i>
									<label data-error="wrong" data-success="right" for="password">Blog Data</label>
									<textarea class="form-control rounded-0" name="description" id="description"
										rows="7" value=""><%= result[i].description%></textarea>
		
								</div>
							</div>
							<div class="modal-footer d-flex justify-content-center">
								<button class="btn btn-outline-primary" data-micron="swing" data-micron-duration=".95">Update</button>
							</div>
						</div>
						<% } %>
					</form>
				</div>
			</div>
			<div class="col ">
				<div class="divStyling">
					<h2 class="mb-5 text-center">Delete</h2>
					<form method="GET	" >
						<input type="hidden" name="_method" value="DELETE">
						<table class="table table-dark">
							<thead>
							  <tr>
								<th scope="col">#</th>
								<th scope="col">Name</th>
								<th scope="col">Description</th>
								<th scope="col">Actions</th>
							  </tr>
							</thead>
							<tbody>
								
								<% for(var i=0; i < result.length; i++) { %>
									<tr>
									  <td><%= result[i].id %></td>
									  <td><%= result[i].name %></td>
									  <td><%= result[i].description %></td>
										
										<td><a class="btn btn-outline-primary" data-micron="swing" data-micron-duration=".95"
											name="id" href="http://localhost:3000/blog/delete_Post/<%= result[i].id %>" >Delete</a></td>
									  
									</tr>
								 <% } %>
								
							</tbody>
						  </table>
						</form>
				</div>
			</div>
		</div>
	</div>

